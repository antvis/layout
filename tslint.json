{
  "extends": [
    "tslint-config-airbnb",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": ["**/es/**/*.d.ts", "**/lib/**/*.d.ts"]
  },
  "rules": {
    "no-construct": true,
    "no-debugger": true,
    "no-reference": true,
    "import-name": false,
    "semicolon": [true, "always"],
    "arrow-parens": true,
    "no-this-assignment": false,
    "no-increment-decrement": false,
    "object-shorthand-properties-first": false
  }
}
